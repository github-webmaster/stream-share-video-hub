# Database Configuration
POSTGRES_USER=streamshare
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_MIN_32_CHARS
POSTGRES_DB=streamshare
DATABASE_URL=postgresql://streamshare:CHANGE_ME_STRONG_PASSWORD_MIN_32_CHARS@db:5432/streamshare

# JWT Secret (64+ characters recommended)
JWT_SECRET=CHANGE_ME_GENERATE_64_RANDOM_CHARS_openssl_rand_base64_64

# API Configuration
PORT=8081
NODE_ENV=production
DEBUG_ENABLED=false
LOG_LEVEL=info

# Storage Configuration
STORAGE_PATH=/data/videos
MAX_FILE_SIZE_MB=500
ALLOWED_TYPES=video/mp4,video/webm,video/quicktime,video/x-msvideo
QUOTA_MB=10240

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com

# Storj/S3 Configuration (Optional - comment out to use local storage)
# Get credentials from: https://www.storj.io/
# STORJ_ACCESS_KEY=your_storj_access_key_id
# STORJ_SECRET_KEY=your_storj_secret_access_key
# STORJ_ENDPOINT=https://gateway.storjshare.io
# STORJ_BUCKET=your-bucket-name
# S3_ENDPOINT=minio:9000

# MinIO Configuration (Local S3-compatible storage)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=CHANGE_ME_MINIO_PASSWORD_MIN_16_CHARS
MINIO_DOMAIN=minio.yourdomain.com

# Frontend Configuration (use same domain for Cloudflare Flexible SSL)
VITE_API_URL=https://yourdomain.com
VITE_MEDIA_URL=https://yourdomain.com/media

# NOTE: VITE_SUPABASE_* variables removed - app is fully self-hosted

# Domain Configuration (for Cloudflare)
DOMAIN=yourdomain.com
API_DOMAIN=api.yourdomain.com
MINIO_DOMAIN=minio.yourdomain.com

# PostgREST (Optional)
PGRST_DB_SCHEMA=public
PGRST_DB_ANON_ROLE=anon
